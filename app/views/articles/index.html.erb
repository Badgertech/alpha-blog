<p id="notice"><%= notice %></p>
<h1>Listing Articles</h1>
  <p><%= link_to 'New Article', new_article_path %></p>
<table >
  <thead>
    <tr>
      <th class="tab-title">Title</th>
      <th class="tab-desc">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="tab-title"><%= article.title %></td>
        <td class="tab-desc"><%= article.description %></td>
        <td class="show"><%= link_to 'Show  ', article %></td>
        <td class="edit"><%= link_to 'Edit  ', edit_article_path(article) %></td>
        <td class="destroy"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

