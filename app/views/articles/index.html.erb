<p id="notice"><%= notice %></p>
<h1>Articles</h1>
  <p><%= link_to 'New Article', new_article_path %></p>

<table id="articles" >
  <thead >
    <tr >
      <th class="tab-title">Title</th>
      <th class="tab-desc">Description</th>
      <th style="colspan:3"></th>

    </tr>
  </thead>

  <tbody>

    <% @articles.each do |article| %>

      <tr>
        <td class="tab-title" ><%= article.title %></td>
        <td class="tab-desc"><%= article.description %></td>
        <td class="btn btn-xs btn-primary"><%= link_to 'Show', article %></td>
        <td class="btn btn-xs btn-info"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class="btn btn-xs btn-danger"><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

